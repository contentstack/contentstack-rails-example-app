<div class="products">
  <div class="container">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title" id="myModalLabel">Demo Site</h4>
          </div>
          <div class="modal-body">This is a Demo E-Commerce site powered by Built.io Contentstack</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <div class="single-page">
      <div class="single-page-row" id="detail-21">
        <div class="col-md-6 single-top-left vcenter">
          <div class="thumb-image detail_images flexslider">
            <ul class="slides">
              <% @product.get('product_images').each do |image| %>
                <li data-thumb="<%= image[:url] %>">
                  <img src="<%= image[:url] %>" />
                </li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="col-md-6 single-top-right vcenter">
          <h3 class="item_name"><%= @product.get('title') %></h3>
          
          <% if @product.get('discounted_price') %>
            <div class="actual-price"><del>$<%= @product.get('price') %></del></div>
            <div class="single-price">
              <ul>
                <li>Now available at </li>
                <li class="offer-price-text">$<%= @product.get('discounted_price') %></li>
              </ul>
            </div>
          <% else %>
            <div class="actual-price"><del>$<%= @product.get('price') %></del></div>
          <% end %>
          <p class="single-price-text"><%= @product.get('description') %></p>
          <form action="#" method="post">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>           

            <button type="submit" class="snipcart-add-item w3ls-cart demoAlert" data-item-id="<%= @product.get('uid') %>" data-item-name="<%= @product.get('title') %>" data-item-price="<%= @product.get('discounted_price') || @product.get('price') %>" data-item-weight="20" data-item-url="/product/<%= @product.get('uid') %>">
              <i class="fa fa-cart-plus" aria-hidden="true"></i> Add to cart
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>